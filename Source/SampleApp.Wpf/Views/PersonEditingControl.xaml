<UserControl x:Class="StyleMVVM.DotNet.TestApp.Views.PersonEditingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:StyleMVVM.DotNet.TestApp.Controls"
             xmlns:viewModels="clr-namespace:StyleMVVM.DotNet.TestApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModels:PersonViewModel}">
    <UserControl.Resources>
    </UserControl.Resources>
    <StackPanel Grid.IsSharedSizeScope="True">
        <controls:BiValueControl>
            <TextBlock Text="Name" />
            <TextBox Text="{Binding Name}" />
        </controls:BiValueControl>
        <controls:BiValueControl>
            <TextBlock Text="Age" />
            <TextBox Text="{Binding Age}" />
        </controls:BiValueControl>
        <ListBox ItemsSource="{Binding OwnedHouses}" Margin="10"  />
    </StackPanel>

</UserControl>