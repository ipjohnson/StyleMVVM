<Application x:Class="Samples.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:Samples.Wpf"
             xmlns:utils="clr-namespace:Samples.Wpf.Utils"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Height" Value="96" />
            <Setter Property="Stretch" Value="Uniform" />
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
        </Style>
        <wpf:NullReturnsCollapsedConverter x:Key="NullSetsCollapsedConverter" />
        <utils:MenuIconConverter x:Key="MenuIconConv" />

        <Style x:Key="ContextMenuItemStyle">
            <!-- ReSharper disable Xaml.BindingWithoutContextNotResolved -->
            <Setter Property="MenuItem.Header" Value="{Binding Text}"/>            
            <Setter Property="MenuItem.ItemsSource" Value="{Binding Children}"/>
            <Setter Property="MenuItem.Command" Value="{Binding Command}" />
            <Setter Property="MenuItem.Icon" Value="{Binding IconUri, Converter={StaticResource MenuIconConv}}" />
            <!-- ReSharper restore Xaml.BindingWithoutContextNotResolved -->
        </Style>

    </Application.Resources>
</Application>
